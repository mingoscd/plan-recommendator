<section class="welcome-page">

	<section class="intro">
		<img class="app-name" src="/images/logo.png" alt="">
		<%= link_to('Sign up', register_path, class: "btn") %>
		<%= link_to('Sign in',nil, class: "btn toggleLogin") %>		
	</section>

	<section id="login-form" class="js-fadeInRight">
		<article>
			<%= form_tag(controller: 'devise/sessions', action: 'create') do %>
			  <div class="register-input">
			    <%= email_field_tag :email, nil, placeholder: "Email", name: "user[email]" %>
			  </div>
			  <div class="register-input">
			    <%= password_field_tag :password, nil, placeholder: "Password", name: "user[password]" %>
			  </div>
				<button class="btn btn-cancel toggleLogin">Cancel</button>
			  <%= submit_tag 'Login', class: "btn" %>
			<% end %>			
		</article>
	</section>

	<section id="login-form-social" class="social-login js-fadeInRight">
		<article class="social-buttons">
			<div class="divider">
				<hr><span>or Join us using</span><hr>		
			</div>
			<button id="google-register">
				<span class="fa fa-google-plus-square"></span>
				<span class="name">Google</span>
			</button>
			<button id="facebook-register">
				<span class="fa fa-facebook-square"></span>
				<span class="name">Facebook</span>
			</button>
			<button id="twitter-register">
				<span class="fa fa-twitter-square"></span>
				<span class="name">Twitter</span>
			</button>
		</article>	
	</section>

</section>